<body>

    <div id="chat-container">
        <div id="chat-header">Simple School Chat</div>
        <div id="user-display">Angemeldet als: <span id="current-username"></span></div>
        <div id="chat-box">
            <!-- Nachrichten werden hier von JavaScript geladen -->
        </div>
        
        <div class="input-area">
            <input type="text" id="message-input" placeholder="Nachricht senden...">
            <div class="button-group">
                <button id="send-button">Senden</button>
                <button id="reset-button">Reset User</button>
            </div>
        </div>
    </div>

    <script>
        // --- JAVASCRIPT: LOGIK & SUPABASE ---

        // 1. SUPABASE-KONFIGURATION (BITTE ERSETZEN)
        const SUPABASE_URL = 'DEINE_SUPABASE_PROJEKT_URL'; // Beispiel: 'https://xyz123.supabase.co'
        const SUPABASE_ANON_KEY = 'DEIN_ANON_PUBLIC_KEY'; // Beispiel: 'eyJhbGciOiJIUzI1NiI...'

        const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
        
        // 2. DOM-ELEMENTE
        const chatBox = document.getElementById('chat-box');
        const messageInput = document.getElementById('message-input');
        const sendButton = document.getElementById('send-button');
        const resetButton = document.getElementById('reset-button');
        const currentUsernameSpan = document.getElementById('current-username');

        let currentUsername = '';

        // --- HILFSFUNKTIONEN ---

        function formatTimestamp(timestamp) {
            const date = new Date(timestamp);
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const year = String(date.getFullYear()).slice(2);
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            return `${day}.${month}.${year} ${hours}:${minutes}`;
        }

        function createMessageElement(message) {
            const div = document.createElement('div');
            div.className = 'message ' + (message.username === currentUsername ? 'self' : 'other');
            div.innerHTML = `
                <div class="message-username">${message.username}</div>
                ${message.message_text}
                <span class="message-timestamp">${formatTimestamp(message.created_at)}</span>
            `;
            // Setzt die Animationsverzögerung basierend auf der Länge der Chatbox
            div.style.animationDelay = `${chatBox.children.length * 0.05}s`;
            return div;
        }

        function scrollToBottom() {
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        // --- USER & AUTHENTIFIZIERUNG ---

        function setupUser() {
            // Versucht, den Namen aus dem lokalen Speicher zu laden
            let storedUser = localStorage.getItem('chat_username');
            
            if (!storedUser) {
                // Wenn kein Name gespeichert ist, frage den Benutzer
                let newUser = prompt('Geben Sie Ihren gewünschten Benutzernamen (max. 15 Zeichen) ein:');
                
                if (newUser) {
                    storedUser = newUser.trim().slice(0, 15);
                    localStorage.setItem('chat_username', storedUser);
                } else {
                    // Fallback, wenn der Benutzer abbricht
                    storedUser = 'Gast';
                }
            }
            
            currentUsername = storedUser;
            currentUsernameSpan.textContent = currentUsername;
            
            // Setzt den Animations-Delay zurück
            chatBox.innerHTML = ''; 
        }

        // --- CHAT LOGIK ---

        async function fetchInitialMessages() {
            let { data: messages, error } = await supabase
                .from('messages')
                .select('*')
                .order('created_at', { ascending: true })
                .limit(50); // Lade die letzten 50 Nachrichten

            if (error) {
                console.error('Fehler beim Laden der Nachrichten:', error);
                chatBox.innerHTML = '<div style="color: red;">Fehler beim Laden der Nachrichten.</div>';
                return;
            }

            messages.forEach(msg => {
                chatBox.appendChild(createMessageElement(msg));
            });
            scrollToBottom();
        }

        async function sendMessage() {
            const text = messageInput.value.trim();

            if (!text) return; // Leere Nachrichten ignorieren
            
            // 1. Nachricht an Supabase senden (INSERT)
            const { error } = await supabase
                .from('messages')
                .insert([
                    { username: currentUsername, message_text: text },
                ]);

            if (error) {
                console.error('Fehler beim Senden der Nachricht:', error);
                alert('Nachricht konnte nicht gesendet werden.');
            } else {
                // 2. Eingabefeld leeren
                messageInput.value = '';
            }
        }

        function setupRealtime() {
            // 3. Abonniere den Channel für neue Nachrichten (REALTIME)
            supabase
                .channel('chat_room')
                .on('postgres_changes', { event: 'INSERT', schema: 'public', table: 'messages' }, (payload) => {
                    // Wird ausgelöst, wenn EINE NEUE Nachricht gesendet wird
                    const newMessage = payload.new;
                    chatBox.appendChild(createMessageElement(newMessage));
                    scrollToBottom();
                })
                .subscribe();
        }


        // --- EVENT LISTENERS ---

        sendButton.addEventListener('click', sendMessage);
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        resetButton.addEventListener('click', () => {
            const confirmed = confirm('Möchten Sie Ihren Benutzernamen wirklich zurücksetzen und sich neu anmelden?');
            if (confirmed) {
                localStorage.removeItem('chat_username');
                window.location.reload(); // Seite neu laden, um SetupUser neu auszuführen
            }
        });


        // --- INITIALISIERUNG ---
        
        function init() {
            if (SUPABASE_URL === 'https://zkqveifenpcmjvsryirl.supabase.co') {
                alert('BITTE ERSETZE DIE SUPABASE_URL UND DEN KEY IM JAVASCRIPT-CODE!');
                return;
            }
            setupUser();
            fetchInitialMessages();
            setupRealtime();
        }

        init();
    </script>
</body>
</html>
